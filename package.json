{
  "name": "sebas-ospina",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "test": "vitest",
    "coverage:prod": "vitest run --coverage --mode=prod",
    "coverage:test": "vitest run --coverage --mode=development",
    "coverage": "npm run coverage:prod && npm run coverage:test",
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "gpush": "npm run coverage && npm run build && git push",
    "lint": "next lint"
  },
  "dependencies": {
    "@emotion/react": "^11.10.5",
    "@emotion/styled": "^11.10.5",
    "@mui/material": "^5.10.12",
    "@mui/styled-engine-sc": "^5.10.6",
    "@supabase/supabase-js": "^2.0.4",
    "@testing-library/react": "13.4.0",
    "@vitejs/plugin-react": "2.1.0",
    "base64-arraybuffer": "^1.0.2",
    "cloudinary": "^1.32.0",
    "email-validator": "^2.0.4",
    "happy-dom": "7.6.0",
    "jsonwebtoken": "^8.5.1",
    "memory-cache": "^0.2.0",
    "next": "12.3.1",
    "next-pwa": "^5.6.0",
    "nodemailer": "^6.8.0",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "remove.bg": "^1.3.0",
    "uuid": "^9.0.0",
    "validator": "^13.7.0",
    "vite": "^3.2.0",
    "vitest": "^0.24.4"
  },
  "devDependencies": {
    "@vitest/coverage-c8": "^0.24.3",
    "dotenv": "^16.0.3",
    "eslint": "^8.24.0",
    "eslint-config-next": "12.3.1",
    "eslint-config-standard": "^17.0.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-n": "^15.3.0",
    "eslint-plugin-promise": "^6.0.1",
    "eslint-plugin-react": "^7.31.8",
    "next-test-api-route-handler": "^3.1.7",
    "postcss-preset-env": "^7.8.3",
    "stylelint": "^14.14.0",
    "stylelint-config-standard": "^29.0.0",
    "typescript": "4.9.4"
  },
  "eslintConfig": {
    "globals": {
      "react": true
    },
    "env": {
      "browser": true,
      "es2021": true,
      "node": true
    },
    "extends": [
      "next/core-web-vitals",
      "plugin:react/recommended",
      "standard",
      "plugin:react/jsx-runtime"
    ],
    "parserOptions": {
      "ecmaFeatures": {
        "jsx": true
      },
      "ecmaVersion": "latest",
      "sourceType": "module"
    },
    "plugins": [
      "react"
    ],
    "rules": {
      "react/prop-types": "off",
      "react/jsx-indent": [
        "error",
        2
      ],
      "react/jsx-indent-props": [
        "error",
        2
      ],
      "react/jsx-closing-bracket-location": [
        "error",
        "tag-aligned"
      ],
      "react/jsx-wrap-multilines": [
        "error",
        {
          "declaration": "parens",
          "assignment": "parens",
          "return": "parens-new-line",
          "arrow": "parens",
          "condition": "ignore",
          "logical": "ignore",
          "prop": "ignore"
        }
      ]
    }
  },
  "stylelint": {
    "extends": "stylelint-config-standard",
    "rules": {
      "selector-class-pattern": "^[a-z][a-zA-Z0-9]+$"
    }
  }
}
