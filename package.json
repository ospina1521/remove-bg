{
  "name": "sebas-ospina",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "test": "vitest",
    "coverage": "vitest run --coverage",
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint"
  },
  "dependencies": {
    "@testing-library/react": "13.4.0",
    "@vitejs/plugin-react": "2.1.0",
    "email-validator": "^2.0.4",
    "happy-dom": "7.6.0",
    "memory-cache": "^0.2.0",
    "next": "12.3.1",
    "next-pwa": "^5.6.0",
    "nodemailer": "^6.8.0",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "vite": "3.1.4",
    "vitest": "0.23.4"
  },
  "devDependencies": {
    "@vitest/coverage-c8": "^0.24.3",
    "eslint": "^8.24.0",
    "eslint-config-next": "12.3.1",
    "eslint-config-standard": "^17.0.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-n": "^15.3.0",
    "eslint-plugin-promise": "^6.0.1",
    "eslint-plugin-react": "^7.31.8",
    "stylelint": "^14.14.0",
    "stylelint-config-standard": "^29.0.0"
  },
  "eslintConfig": {
    "globals": {
      "react": true
    },
    "env": {
      "browser": true,
      "es2021": true,
      "node": true
    },
    "extends": [
      "next/core-web-vitals",
      "plugin:react/recommended",
      "standard",
      "plugin:react/jsx-runtime"
    ],
    "parserOptions": {
      "ecmaFeatures": {
        "jsx": true
      },
      "ecmaVersion": "latest",
      "sourceType": "module"
    },
    "plugins": [
      "react"
    ],
    "rules": {
      "react/prop-types": "off",
      "react/jsx-indent": [
        "error",
        2
      ],
      "react/jsx-indent-props": [
        "error",
        2
      ],
      "react/jsx-closing-bracket-location": [
        "error",
        "tag-aligned"
      ],
      "react/jsx-wrap-multilines": [
        "error",
        {
          "declaration": "parens",
          "assignment": "parens",
          "return": "parens-new-line",
          "arrow": "parens",
          "condition": "ignore",
          "logical": "ignore",
          "prop": "ignore"
        }
      ]
    }
  },
  "stylelint": {
    "extends": "stylelint-config-standard",
    "rules": {
      "selector-class-pattern": "^[a-z][a-zA-Z0-9]+$"
    }
  }
}
